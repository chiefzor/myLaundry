<% include ../partials/header %> 

<link rel="stylesheet" href="/stylesheets/search.css">
<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.6.3/css/font-awesome.min.css">

        <header class="jumbotron">
             <div class="container">
                 <h1>Welcome To myLaundry!</h1>
                 <p>View our hand-picked collection from all over the world</p>
                 <p>
                    <a class="btn btn-primary btn-large" href="/collection/new">Add New Garment</a>
                 </p>
             </div>
         </header>
         
         <div class="row text-center" style="display:flex; flex-wrap: wrap;">
            
    <div class="col-md-2">
    			<div id="accordion" class="panel panel-primary behclick-panel">
    				<div class="panel-heading">
    					<h3 class="panel-title">Garment Filter</h3>
    				</div>
    				<div class="panel-body" >
    					<div class="panel-heading " >
    						<h4 class="panel-title">
    							<a data-toggle="collapse" href="#collapse0">
    								<i class="indicator fa fa-caret-down" aria-hidden="true"></i> Colors
    							</a>
    						</h4>
    					</div>
    					<div id="collapse0" class="panel-collapse collapse in" >
    						<ul class="list-group">
    						     <% colors.forEach(function(color){ %>
                                    <li class="list-group-item">
    								<div class="checkbox">
    									<label>
    										<input type="checkbox" value="<%= color %>" checked>
    										<%= color %>
    									</label>
    								</div>
    							</li>
                                <% }); %>
                        </div>
    					<div class="panel-heading " >
    						<h4 class="panel-title">
    							<a data-toggle="collapse" href="#collapse1">
    								<i class="indicator fa fa-caret-down" aria-hidden="true"></i> Users
    							</a>
    						</h4>
    					</div>
    					<div id="collapse1" class="panel-collapse collapse in" >
    						<ul class="list-group">
    							 <% users.forEach(function(user){ %>
                                    <li class="list-group-item">
    								<div class="checkbox">
    									<label>
    										<input type="checkbox" value="<%= user %>" checked>
    										<%= user %>
    									</label>
    								</div>
    							</li>
                                <% }); %>
    						</ul>
    					</div>
    				</div>
    		    </div>
    </div>
    <div class="col-md-10">
            <% collection.forEach(function(garment){ %>
                <div class="<%= garment.author.username %> <%= garment.color %>">
                <div class="col-md-3 col-sm-6">
                    <div class="thumbnail">
                           <img src="/uploads/<%= garment.image.name %>">
                           <div class="caption">
                               <h4><%= garment.name %></h4>
                           </div>
                           <p>
                               <a href="/collection/<%= garment._id %>" class="btn btn-primary">More Info</a>
                           </p>
                        </div>
                    </div>
                </div>
            <% }); %>
    </div>
</div>

<script type='text/javascript' src="//code.jquery.com/jquery-1.11.0.min.js"></script>
<script type='text/javascript' src="//netdna.bootstrapcdn.com/bootstrap/3.3.2/js/bootstrap.min.js"></script>
<script type='text/javascript' src="/scripts/search.js"></script>

<% include ../partials/footer %>
