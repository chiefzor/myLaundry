<% include ../partials/header %>
<div class="container">
    <div class="row">
        <div class="col-md-3">
            <p class="lead">myLaundry</p>
            <div class="list-group">
                <li class="list-group-item active">Test1</li>
                <li class="list-group-item">Test2</li>
            </div>
        </div>
        <div class="col-md-9">
            <div class="thumbnail">
                <img class="img-responsive" src="/uploads/<%= garment.image.name %>">
                <div class="caption-full">
                    <h4><a><%=garment.name%></a></h4>
                    <p><%= garment.description %></p>
                    <p>
                        <em>Submitted By <%= garment.author.username %></em>
                    </p>
                    <% if(currentUser && garment.author.id.equals(currentUser._id)){ %>
                        <a class="btn btn-xs btn-warning" href="/collection/<%= garment._id %>/edit">Edit</a>
                        <form id="delete-form" action="/collection/<%= garment._id %>?_method=DELETE" method="POST">
                            <button class="btn btn-xs btn-danger">Delete</button>
                        </form>
                    <% }%>
                </div>
            </div>
        </div>
    </div>
</div>

<% include ../partials/footer %>